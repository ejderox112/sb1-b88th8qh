// app/(tabs)/MapScreen.tsx
import { View, Text, StyleSheet } from 'react-native';
import ArrowIcon from '../../assets/icons/arrow.svg'; // SVG dosyan burada olmalÄ±

const grid = [
  ['A101', '', '', 'WC', ''],
  ['', '', '', '', ''],
  ['A102', '', 'YOU', '', 'EXIT'],
];

function RoomTile({ type }: { type: string }) {
  if (type === 'YOU') {
    return (
      <View style={styles.tile}>
        <ArrowIcon width={32} height={32} />
      </View>
    );
  }

  return (
    <View style={styles.tile}>
      <Text>{type}</Text>
    </View>
  );
}

export default function MapScreen() {
  return (
    <View style={styles.grid}>
      {grid.map((row, rowIndex) => (
        <View key={rowIndex} style={styles.row}>
          {row.map((cell, colIndex) => (
            <RoomTile key={colIndex} type={cell} />
          ))}
        </View>
      ))}
    </View>
  );
}

const styles = StyleSheet.create({
  grid: {
    flexDirection: 'column',
    padding: 10,
  },
  row: {
    flexDirection: 'row',
  },
  tile: {
    width: 64,
    height: 64,
    borderWidth: 1,
    borderColor: '#ccc',
    justifyContent: 'center',
    alignItems: 'center',
  },
});